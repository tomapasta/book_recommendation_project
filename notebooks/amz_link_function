import urllib.parse

def get_affiliate_link(book_title, tag="mrlpld-21"):
    """
    Generates a dynamically tagged Amazon.de affiliate search link.
    
    Args:
        book_title (str): The name of the book or author.
        tag (str): Amazon Associate tracking ID.
        
    Returns:
        amz_url: A fully formatted Amazon DE affiliate link.
    """
    # Amazon DE base URL
    base_url = "https://www.amazon.de/s"
    
    # Parameters for the URL
    params = {
        "k": book_title,
        "tag": tag
    }
    
    # URL encode
    encoded_params = urllib.parse.urlencode(params)
    
    # Build final URL
    amz_url = f"{base_url}?{encoded_params}"
    
    return amz_url

# This allows to test code
if __name__ == "__main__":
    test_title = "Der Alchemist Paulo Coelho"
    print(f"Generated Link: {get_affiliate_link(test_title)}")